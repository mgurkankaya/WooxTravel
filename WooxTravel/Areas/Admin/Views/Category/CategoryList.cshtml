﻿@model List<WooxTravel.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategoriler</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-head-bg-success table-hover">
                            <thead>
                                <tr>
                                    <th class="col-2">#</th>
                                    <th class="col-8">Kategori Adı</th>
                                    <th class="col-2 text-center">İşlemler</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td class="text-center">
                                            <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn-lg text-primary">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a class="btn-lg text-danger" onclick="DeleteCategory(@item.CategoryId)"><i class="fa fa-times"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Category/CreateCategory" class="btn-lg btn-primary btn-round ms-auto    text-white ">
                            <i class="fa fa-plus"></i>
                            Yeni Ekle
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    function DeleteCategory(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/Category/DeleteCategory/" + id;
            }
        });
    }
</script>