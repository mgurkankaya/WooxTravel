@model List<WooxTravel.Entities.Message>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container  ">
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
    <div class="mail-box">
        <aside class="sm-side">
            <div class="user-head">
                <a class="inbox-avatar" href="javascript:;">
                    <img width="64" hieght="60" src="http://bootsnipp.com/img/avatars/ebeb306fd7ec11ab68cbcaa34282158bd80361a7.jpg">
                </a>
                <div class="user-name">
                    <h5><a href="#">@ViewBag.username</a></h5>
                    <span><a href="#">@ViewBag.mail</a></span>
                </div>
                <a class="mail-dropdown pull-right" href="javascript:;">
                    <i class="fa fa-chevron-down"></i>
                </a>
            </div>
            <div class="inbox-body">
                <a href="/Admin/Message/Compose" class="btn btn-compose">Yaz</a>
              
            </div>
            <ul class="inbox-nav inbox-divider">
                <li >
                    <a href="/Admin/Message/Inbox"><i class="fa fa-inbox"></i> Gelen Kutusu </a>

                </li>
                <li>
                    <a href="/Admin/Message/Sendbox"><i class="fa fa-envelope-open"></i> Giden Kutusu</a>
                </li>
                <li class="active">
                    <a href="/Admin/Message/Trash"><i class="fa fa-trash"></i> Çöp</a>
                </li>

            </ul>





        </aside>
        <aside class="lg-side">
            <div class="inbox-head">
                <h3>Çöp Kutusu</h3>

            </div>
            <div class="inbox-body">
                <div class="mail-option">


                    <ul class="unstyled inbox-pagination">
                        <li><span>1-50 of 234</span></li>
                        <li>
                            <a class="np-btn" href="#"><i class="fa fa-angle-left  pagination-left"></i></a>
                        </li>
                        <li>
                            <a class="np-btn" href="#"><i class="fa fa-angle-right pagination-right"></i></a>
                        </li>
                    </ul>
                </div>
                <table class="table table-inbox table-hover">
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr class="unread">
                                <td class="inbox-small-cells">
                                    <input type="checkbox" class="mail-checkbox">
                                </td>
                                <td class="inbox-small-cells"><i class="fa fa-star"></i></td>
                                <td class="view-message  dont-show">@item.SenderMail</td>
                                <td class="view-message ">@item.Subject</td>
                                <td class="view-message  inbox-small-cells"><i class="fa fa-paperclip"></i></td>
                                <td class="view-message  text-right">@item.SendDate.ToShortDateString()</td>
                            </tr>
                        }
                       

                      

                    </tbody>
                </table>
            </div>
        </aside>
    </div>
</div>